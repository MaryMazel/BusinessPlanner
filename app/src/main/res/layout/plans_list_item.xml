<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_item"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="4dp"
    android:background="@drawable/item_shape"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Title"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:paddingRight="4dp"
            android:text="12-12-12"/>

    </LinearLayout>

    <TextView
        android:id="@+id/note_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:textSize="14sp"
        android:text="This is a text This is a text This is a text
This is a textThis is a textThis is a text This is a text This is a text This is a text
This is a text This is a text This is a text This is a text This is a text This is a text This is a text This is a text This is a text
 This is a text This is a text This is a text This is a text This is a text This is a text This is a text
 This is a text This is a text This is a text This is a text"
        android:textColor="@color/colorSecondaryText"
        android:paddingLeft="4dp" />

    <ImageView
        android:id="@+id/delete_plan"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:contentDescription="@string/delete" />

</LinearLayout>